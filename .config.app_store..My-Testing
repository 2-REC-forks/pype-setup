
# toml .configuration file generated automatically if not present
# please adjust this file as `your preset`


# add anything related main proces. Remember most of crucial dependecies are
# set in resources.txt maintaned by pip. If you are sure yours is not then
# you can set all dependecies here and activate.py will solve it.
# look into example of adding new plugin into lower section `adding plugins`

path = "{root}/app_store"

#path to dir with shortcut linked to installed app
# rest of the path is comming from individual `app{version}.toml` files as
# such as version, variablses for sys and session avalon, pyblish
# platform conditions are also set in `app{version}.toml`
[bin.maya]
path = "{root}/bin/maya/{platform}/Maya"
[bin.nuke]
path = "{root}/bin/nuke/Nuke"
[bin.fusion]
path = "{root}/bin/fusion/Fusion"
[bin.resolve]
path = "{root}/bin/resolve/Resolve"
[bin.blender]
path = "{root}/bin/blender/Blender"



## main plugins
### Maya
[avalon.maya]
    git = "git@github.com:avalon-maya.git"
    path = "{root}/app-store/avalon-maya"
    qt = "{app_store.avalon.maya.path}/vendor/Qt"
[pyblish.maya]
    git = "git@github.com:pyblish-maya.git"
    path = "{root}/app-store/pyblish-maya"
    qt = "{app_store.pyblish.maya.path}/vendor/Qt"


