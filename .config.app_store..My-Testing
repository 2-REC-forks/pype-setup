# toml .configuration file
# please adjust this file as `your preset`

# path to app_store folder
path = "{root}/app_store"

## Path to dir with shortcut linked to installed app
# rest of the path is coming from individual `app{version}.toml` files as
# such as version, variables for sys and session avalon, pyblish
# platform conditions are also set in `app{version}.toml`
[bin.maya]
path = "{root}/bin/Maya"
[bin.nuke]
path = "{root}/bin/Nuke"
[bin.fusion]
path = "{root}/bin/Fusion"
# [bin.resolve]
# path = "{root}/bin/Resolve"
# [bin.blender]
# path = "{root}/bin/Blender"



## main plugins
# setting menu
[avalon]
# demonstration purouse only > this will come later from the tool itself
menu = ['Config core','Create new project','______','Save database',]

[pyblish]
# demonstration purouse only > this will come later from the tool itself
# microplugin manager: spin of [w_hotbox](http://www.nukepedia.com/python/ui/w_hotbox)
menu = ['Config Pyblish', 'Create new micro-plugin', '______', 'Micro-plugins manager',]


### Users
[avalon.users]
    git = "git@github.com:pypeclub/avalon-users.git|master" # brach is optional
    zip = "https://github.com/pypeclub/avalon-users/archive/master.zip"
    path = "{app-store.path}/avalon-users/users"
    # demonstration purouse only > this will come later from the tool itself
    menu = ['Config User', 'Create new user',]

### Config - in this case used as default, but if custom, then linked to
### company own config repository
[avalon.config]
    git = "git@github.com:pypeclub/avalon-config.git|master" # brach is optional
    zip = "https://github.com/pypeclub/avalon-config/archive/master.zip"
    path = "{app-store.path}/avalon-config/config"

### avalon-template
[avalon.template]
    git = "git@github.com:pypeclub/avalon-template.git|master" # brach is optional
    zip = "https://github.com/pypeclub/avalon-template/archive/master.zip"
    path = "{app-store.path}/avalon-template/template"
    qt = "{app_store.avalon.template.path}/vendor/Qt"
    # demonstration purouse only > this will come later from the tool itself
    menu = ['Create new template', '______', 'Templates manager']

# INTEGRATIONS
### Maya
[avalon.maya]
    git = "git@github.com:pypeclub/avalon-maya.git|master" # brach is optional
    zip = "https://github.com/pypeclub/avalon-maya/archive/master.zip"
    path = "{app-store.path}/avalon-maya/avalon_maya"
    qt = "{app_store.avalon.maya.path}/vendor/Qt"

### Nuke
[avalon.nuke]
    git = "git@github.com:pypeclub/avalon-nuke.git|master" # brach is optional
    url = "https://github.com/pypeclub/avalon-nuke/archive/master.zip"
    path = "{app-store.path}/avalon-nuke/avalon_nuke"
    qt = "{app_store.avalon.nuke.path}/vendor/Qt"


### Fusion
[avalon.fusion]
    git = "git@github.com:pypeclub/avalon-fusion.git|master" # brach is optional
    url = "https://github.com/pypeclub/avalon-fusion/archive/master.zip"
    path = "{app-store.path}/avalon-fusion/avalon_fusion"
    qt = "{app_store.avalon.fusion.path}/vendor/Qt"



