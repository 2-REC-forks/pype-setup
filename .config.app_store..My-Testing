# toml .configuration file
# please adjust this file as `your preset`

# path to app_store folder
path = "{root}/app_store"

## Path to dir with shortcut linked to installed app
# rest of the path is coming from individual `app{version}.toml` files as
# such as version, variables for sys and session avalon, pyblish
# platform conditions are also set in `app{version}.toml`
[bin.maya]
path = "{root}/bin/Maya"
[bin.nuke]
path = "{root}/bin/Nuke"
[bin.fusion]
path = "{root}/bin/Fusion"
[bin.resolve]
path = "{root}/bin/Resolve"
# [bin.blender]
# path = "{root}/bin/Blender"



## ADITIONAL PLUGINS
### Users
[avalon.users]
    git = "git@github.com:pypeclub/avalon-users.git|master" # brach is optional
    zip = "https://github.com/pypeclub/avalon-users/archive/master.zip"
    path = "{app_store.path}/avalon-users/users"
    # demonstration purouse only > this will come later from the tool itself
    menu = ['Config User', 'Create new user',]

### Config - in this case used as default, but if custom, then linked to
### company own config repository
[avalon.config]
    git = "git@github.com:pypeclub/avalon-config.git|master" # brach is optional
    zip = "https://github.com/pypeclub/avalon-config/archive/master.zip"
    path = "{app_store.path}/avalon-config/config"

### avalon-template
[avalon.template]
    git = "git@github.com:pypeclub/avalon-template.git|master" # brach is optional
    zip = "https://github.com/pypeclub/avalon-template/archive/master.zip"
    path = "{app_store.path}/avalon-template/template"
    qt = "{app_store.avalon.template.path}/vendor/Qt"
    # demonstration purouse only > this will come later from the tool itself
    menu = ['Create new template', '______', 'Templates manager']

### academy >> input search engine to find answer or tutorial > within `avalon.tray`
[avalon.academy]
    git = "git@github.com:pypeclub/avalon-academy.git|master"
    zip = "https://github.com/pypeclub/avalon-academy/archive/master.zip"
    path = "{app_store.path}/avalon-academy/academy"
    qt = "{app_store.avalon.academy.path}/vendor/Qt"
    # demonstration purouse only > this will come later from the tool itself
    menu = ['Config Academy', '______', 'Submit new',]


